{
  "compilerOptions": {
    "outDir": "./dist/",

    "paths": {
      "@/*": ["./src/*"]
    },

    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,

    "noEmitOnError": true,

    "strict": true,
    "skipLibCheck": true
  }
}
